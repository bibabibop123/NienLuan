<table>
  <tr class="cart-title">
    <th class="cart-img">Hình ảnh</th>
    <th class="cart-detail">Mô tả</th>
    <th class="cart-price">Gía tiền</th>
    <th class="cart-number">Số lượng</th>
    <th class="cart-rm">Xóa bỏ</th>
  </tr>
  {{#each cart}}
    <tr class="cart-product justify-content: center">
      <td class="cart-img">
        <img src="{{this.image}}">
      </td>
      <td class="cart-detail">
        <p>{{this.description}}</p>
      </td>
      <td class="cart-price">{{this.price}}</td>
      <td class="cart-number">
        <div style="display: flex;justify-content: center;">
          <form action="/cart/decrement/{{this.id}}" method="post"><input type="submit"  value="-" style="max-width: 30px;"/></form>
          <input type="number" value="{{this.quality}}"  style="max-width: 30px; margin-left: 10%" readonly="true">
          <form action="/cart/increment/{{this.id}}" method="post"><input type="submit"  value="+"  style="max-width: 30px;"/></form>

        </div>
      </td>
      <td class="cart-rm">
        <a href="/cart/remove-cart/{{this.id}}">
        <button class="remove-product">
          Xóa
        </button>
        </a>
      </td>
      <td class="cart-total"></td>
    </tr>
  {{/each}}
  <tr class="total-price">
    <td colspan="6">
      <p>Tổng tiền: {{total}}</p>
      <p>Phí ship:15000</p>
      <p>Tổng đơn hàng: {{total}}</p>
    </td>
  </tr>
</table>
      <form action="/payment/">
         <button type="submit" class="cart-shopping">Tiến hành thanh toán</button>
      </form>