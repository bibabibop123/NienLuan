              {{#each products}}
                <tr class="product">
                    <th scope="row">{{@index}}</th>
                    <td class="product-name">{{this.name_content}}</td>
                    <td class="product-image"><img src="{{this.img}}" class="product-image"></td>
                    <td>{{this.total}}</td>
                    <td>{{this.type}}</td>
                    <td class="product-detail">{{this.detail}}</td>
                    <td>{{this.brand}}</td>
                    <td>
                        <a href="/admin/product/detail/{{this._id}}">Sửa</a>
                        {{!-- <a href="" data-toggle="modal" data-id="{{this._id}}" data-target="#delete">Xóa</a> --}}
