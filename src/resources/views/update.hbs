<div class="update-form">
    <p class="title-update">Trang Chủ Admin</p>
    <a class="creat-add btn" href="/creat">+ Thêm Mới Sản Phẩm</a>
    <table class="table update">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Tên sản phẩm</th>
        <th scope="col">Giá</th>
        <th scope="col">Hình ảnh</th>
        <th scope="col">Loại</th>
        <th scope="col">Chi tiết</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
          <tr>
              <td scope="row">{{sum @index 1}}</td>
              <td>{{this.name_content}}</td>
              <td>{{this.total}}</td>
              <td>{{this.img}}</td>
              <td>{{this.type}}</td>
              <td>{{this.detail}}</td>
              <td>
                  <a href="/courses/detail/{{this._id}}">Sửa</a>
              </td>
              <td>
                  <a href="" data-toggle="modal" data-id="{{this._id}}" data-target="#delete">Xóa</a>
              </td>
          </tr>
      {{/each}}
    </tbody>
  </table>


  <div id="delete" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Xóa sản phẩm</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Bạn có chắc chắn muốn xóa sản phẩm</p>
        </div>
        <div class="modal-footer">
          <button id="btn-delete" type="button" class="btn btn-danger">Xác Nhận</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
      </div>
    </div>
  </div>
</div>

<form method="post" name="detele-form"></form>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var courseId;
    var deleteForm = document.forms['detele-form'];
    var btnDelete = document.getElementById('btn-delete');
    
      $('#delete').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) 
        courseId = button.data('id') 
      });

    btnDelete.onclick = function () {
      deleteForm.action = '/courses/delete/' + courseId + '?_method=DELETE';
      deleteForm.submit();
    }
  })
</script>